<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.soecode.lyf.dao.BookDao">
    <!-- 目的：为dao接口方法提供sql语句配置 -->
    <sql id="qmProductColumns">
        a.id AS "id",
        a.username AS "username",
        a.password AS "password",
        a.age AS "age"
    </sql>

    <sql id="qmProductJoins">

    </sql>
    <select id="queryId" resultType="User">
        SELECT
        <include refid="qmProductColumns"/>
        FROM user_t a
        <include refid="qmProductJoins"/>
        WHERE a.id = #{id}
    </select>

</mapper>